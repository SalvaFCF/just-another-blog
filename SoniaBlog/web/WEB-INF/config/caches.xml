<caches>

  <cache>
    <name>feed.cache</name>
    <class>sonia.cache.SimpleExpirationCache</class>
    <parameter>
      <param-name>expiration-time</param-name>
      <param-value>3600000</param-value>
    </parameter>
  </cache>

  <cache>
    <name>mbPreview.cache</name>
    <class>sonia.cache.SimpleExpirationCache</class>
    <parameter>
      <param-name>expiration-time</param-name>
      <param-value>180000</param-value>
    </parameter>
  </cache>

  <cache>
    <name>mapping.cache</name>
    <class>sonia.cache.LRUCache</class>
    <parameter>
      <param-name>max-items</param-name>
      <param-value>500</param-value>
    </parameter>
  </cache>

</caches>
