<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
  
  <navigation-rule>
    <from-view-id>/*</from-view-id>
    <navigation-case>
      <from-outcome>install</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>overview</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>personal</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>searchResult</from-outcome>
      <to-view-id>/searchResult.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>deny</from-outcome>
      <to-view-id>/deny.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>detail</from-outcome>
      <to-view-id>/detail.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/searchResult.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>detail</from-outcome>
      <to-view-id>/detail.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/*</from-view-id>
    <navigation-case>
      <from-outcome>categories</from-outcome>
      <to-view-id>/personal/categories.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>templates</from-outcome>
      <to-view-id>/personal/templates.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>comments</from-outcome>
      <to-view-id>/personal/comments.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>general</from-outcome>
      <to-view-id>/personal/general.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>members</from-outcome>
      <to-view-id>/personal/members.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/entries.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/editor/attachments.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/editor/edit.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/editor/attachments.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/editor/edit.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/editor/attachments.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/editor/edit.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/login.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step1.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step2.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/comments.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>details</from-outcome>
      <to-view-id>/personal/commentDetails.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
    
</faces-config>
