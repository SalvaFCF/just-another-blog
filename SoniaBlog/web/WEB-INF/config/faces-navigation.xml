<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
  
  <navigation-rule>
    <from-view-id>/*</from-view-id>
    <navigation-case>
      <from-outcome>install</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>overview</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>dashboard</from-outcome>
      <to-view-id>/personal/dashboard.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>register</from-outcome>
      <to-view-id>/register.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>createBlog</from-outcome>
      <to-view-id>/blog.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>deny</from-outcome>
      <to-view-id>/deny.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  
  <navigation-rule>
    <from-view-id>/personal/*</from-view-id>
    <navigation-case>
      <from-outcome>entries</from-outcome>
      <to-view-id>/personal/author/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>userSettings</from-outcome>
      <to-view-id>/personal/userSettings.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>categories</from-outcome>
      <to-view-id>/personal/author/categories.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>templates</from-outcome>
      <to-view-id>/personal/admin/templates.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>comments</from-outcome>
      <to-view-id>/personal/author/comments.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>general</from-outcome>
      <to-view-id>/personal/admin/general.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>members</from-outcome>
      <to-view-id>/personal/admin/members.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>administration</from-outcome>
      <to-view-id>/personal/globaladmin/blogs.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>globalStatus</from-outcome>
      <to-view-id>/personal/globaladmin/status.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>config</from-outcome>
      <to-view-id>/personal/globaladmin/config.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>editor</from-outcome>
      <to-view-id>/personal/author/editor/editor.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>plugins</from-outcome>
      <to-view-id>/personal/globaladmin/plugins.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>userAdministration</from-outcome>
      <to-view-id>/personal/globaladmin/users.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/globaladmin/users.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>detail</from-outcome>
      <to-view-id>/personal/globaladmin/userDetail.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/globaladmin/userDetail.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/personal/globaladmin/users.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/author/entries.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/author/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/author/entries.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/author/editor/attachments.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/author/editor/edit.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/author/editor/attachments.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/author/editor/edit.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/author/editor/attachments.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/author/editor/edit.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step1.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step2.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/author/comments.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>details</from-outcome>
      <to-view-id>/personal/author/commentDetails.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/personal/dashboard.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>edit-draft</from-outcome>
      <to-view-id>/personal/author/editor/editor.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
    
</faces-config>
