<mappings>

  <mapping>
    <regex>^/list/([0-9)]*)(?:index)*\.jab$</regex>
    <class>sonia.blog.mapping.ListMapping</class>
  </mapping>

  <mapping>
    <regex>^/category/([0-9)]*)/([0-9)]*)(?:index)*\.jab$</regex>
    <class>sonia.blog.mapping.CategoryMapping</class>
  </mapping>

  <mapping>
    <regex>^/tag/([0-9)]*)/([0-9)]*)(?:index)*\.jab$</regex>
    <class>sonia.blog.mapping.TagMapping</class>
  </mapping>

  <mapping>
    <regex>^/attachment/([0-9)]*)$</regex>
    <class>sonia.blog.mapping.AttachmentMapping</class>
  </mapping>

  <mapping>
    <regex>^/image/([0-9)]*)$</regex>
    <class>sonia.blog.mapping.ImageMapping</class>
  </mapping>

  <mapping>
    <regex>^/date/([0-9-)]*)/([0-9)]*)(?:index)*\.jab$</regex>
    <class>sonia.blog.mapping.DateMapping</class>
  </mapping>

  <mapping>
    <regex>^/feed/([a-zA-Z]*)[/]?([0-9-)]*)\.(rss|rss2|atom)$</regex>
    <class>sonia.blog.mapping.FeedMapping</class>
  </mapping>

  <mapping>
    <regex>^/opensearch.xml$</regex>
    <class>sonia.blog.mapping.OpenSearchMapping</class>
  </mapping>

  <mapping>
    <regex>^/search.jab$</regex>
    <class>sonia.blog.mapping.SearchMapping</class>
  </mapping>

  <mapping>
    <regex>^/random.jab$</regex>
    <class>sonia.blog.mapping.RandomMapping</class>
  </mapping>
  
  <mapping>
    <regex>^/resource/(.*)$</regex>
    <class>sonia.blog.mapping.ResourceMapping</class>
  </mapping>

  <mapping>
    <regex>^/chart/blog/usage.png$</regex>
    <class>sonia.blog.mapping.chart.BlogUsageChartMapping</class>
  </mapping>

  <mapping>
    <regex>^/xml-rpc$</regex>
    <class>sonia.blog.mapping.remote.XMLRPCMapping</class>
  </mapping>

  <mapping>
    <regex>^/trackback/([0-9]*)$</regex>
    <class>sonia.blog.mapping.remote.TrackbackMapping</class>
  </mapping>

  <mapping>
    <regex>^/page/([0-9]+).jab</regex>
    <class>sonia.blog.mapping.PageMapping</class>
  </mapping>

  <mapping>
    <regex>^/custom-template/(.*)$</regex>
    <class>sonia.blog.mapping.CustomTemplateMapping</class>
  </mapping>

  <mapping>
    <regex>^/lost-password$</regex>
    <class>sonia.blog.mapping.LostPasswordMapping</class>
  </mapping>

  <mapping>
    <regex>^/(page|entry)-preview.jab$</regex>
    <class>sonia.blog.mapping.PreviewMapping</class>
  </mapping>

</mappings>
