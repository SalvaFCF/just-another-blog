<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
  
  <navigation-rule>
    <from-view-id>/*</from-view-id>
    <navigation-case>
      <from-outcome>install</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>overview</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>personal</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>searchResult</from-outcome>
      <to-view-id>/searchResult.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>deny</from-outcome>
      <to-view-id>/deny.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>detail</from-outcome>
      <to-view-id>/detail.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/searchResult.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>detail</from-outcome>
      <to-view-id>/detail.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/*</from-view-id>
    <navigation-case>
      <from-outcome>categories</from-outcome>
      <to-view-id>/personal/categories.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>templates</from-outcome>
      <to-view-id>/personal/templates.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>comments</from-outcome>
      <to-view-id>/personal/comments.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>general</from-outcome>
      <to-view-id>/personal/general.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>members</from-outcome>
      <to-view-id>/personal/members.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/entries.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/login.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/personal/entries.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step1.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step1.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/install/step2.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/install/step2.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/personal/comments.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>details</from-outcome>
      <to-view-id>/personal/commentDetails.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <converter>
    <converter-id>converter.category</converter-id>
    <converter-class>sonia.blog.wui.converter.CategoryConverter</converter-class>
  </converter>
  
  <lifecycle>
    <phase-listener>
            sonia.blog.app.AccessPhaseListener
    </phase-listener>
    <phase-listener>
            sonia.blog.app.BlogContextPhaseListener
    </phase-listener>
  </lifecycle>
  
  <application>
    <view-handler>
            com.sun.facelets.FaceletViewHandler
    </view-handler>
    <resource-bundle>
      <base-name>sonia.blog.resources.label</base-name>
      <var>label</var>
    </resource-bundle>
    <resource-bundle>
      <base-name>sonia.blog.resources.message</base-name>
      <var>message</var>
    </resource-bundle>
  </application>
  
  <managed-bean>
    <managed-bean-name>InstallBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.InstallBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>BlogBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.BlogBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>LoginBean</managed-bean-name>
    <managed-bean-class>sonia.blog.api.authentication.LoginBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>EntryBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.EntryBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>CategoryBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.CategoryBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>CommentBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.CommentBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>TemplateBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.TemplateBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>ConfigBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.ConfigBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <managed-bean-name>MemberBean</managed-bean-name>
    <managed-bean-class>sonia.blog.wui.MemberBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  
  <component>
    <display-name>content</display-name>
    <component-type>sonia.blog.content</component-type>
    <component-class>sonia.blog.api.jsf.content.ContentComponent</component-class>
    <component-extension>
      <renderer-type>sonia.blog.content.renderer</renderer-type>
    </component-extension>
  </component>
  
  <component>
    <display-name>link</display-name>
    <component-type>sonia.blog.link</component-type>
    <component-class>sonia.blog.api.jsf.link.LinkComponent</component-class>
    <component-extension>
      <renderer-type>sonia.blog.link.renderer</renderer-type>
    </component-extension>
  </component>
  
  <component>
    <display-name>resource</display-name>
    <component-type>sonia.blog.resource</component-type>
    <component-class>sonia.blog.api.jsf.resource.ResourceComponent</component-class>
    <component-extension>
      <renderer-type>sonia.blog.resource.renderer</renderer-type>
    </component-extension>
  </component>
  
  <component>
    <display-name>search</display-name>
    <component-type>sonia.blog.search</component-type>
    <component-class>sonia.blog.api.jsf.search.SearchComponent</component-class>
    <component-extension>
      <renderer-type>sonia.blog.search.renderer</renderer-type>
    </component-extension>
  </component>
  
  <render-kit>
    <renderer>
      <component-family>sonia.blog.link</component-family>
      <renderer-type>sonia.blog.link.renderer</renderer-type>
      <renderer-class>sonia.blog.api.jsf.link.LinkRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>sonia.blog.resource</component-family>
      <renderer-type>sonia.blog.resource.renderer</renderer-type>
      <renderer-class>sonia.blog.api.jsf.resource.ResourceRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>sonia.blog.search</component-family>
      <renderer-type>sonia.blog.search.renderer</renderer-type>
      <renderer-class>sonia.blog.api.jsf.search.SearchRenderer</renderer-class>
    </renderer>
    <renderer>
      <component-family>sonia.blog.content</component-family>
      <renderer-type>sonia.blog.content.renderer</renderer-type>
      <renderer-class>sonia.blog.api.jsf.content.ContentRenderer</renderer-class>
    </renderer>
  </render-kit>
    <managed-bean>
        <managed-bean-name>AdminBlogBean</managed-bean-name>
        <managed-bean-class>sonia.blog.wui.AdminBlogBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
