<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0" xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">
  <persistence-unit-metadata>
    <persistence-unit-defaults>
      <access>FIELD</access>
    </persistence-unit-defaults>
  </persistence-unit-metadata>
  <package>sonia.blog.entity</package>
  <entity metadata-complete="true" name="Page" class="sonia.blog.entity.Page">
    <!--
      @OneToMany(mappedBy = "page")
      private List<Attachment> attachments;

      @ManyToOne
      private User author;

      @Lob
      private String content;

      @Temporal(TemporalType.TIMESTAMP)
      private Date creationDate;

      @Id @GeneratedValue(strategy = GenerationType.IDENTITY)
      private Long id;

      @ManyToOne(fetch = FetchType.LAZY)
      private Page parent;

      private int position;

      private boolean published = false;

      private String title;
    -->
    <attributes>
      <id name="id">
        <generated-value strategy="IDENTITY" />
      </id>
      <basic name="content">
        <lob />
      </basic>
      <basic name="creationDate">
        <column nullable="false" />
        <temporal>TIMESTAMP</temporal>
      </basic>
      <many-to-one name="author" optional="false" />
      <many-to-one name="parent" fetch="LAZY" />
      <one-to-many name="attachments" mapped-by="page" />
    </attributes>
  </entity>
</entity-mappings>
