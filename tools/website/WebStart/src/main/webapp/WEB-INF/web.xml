<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>WebStart</display-name>
  <filter>
    <filter-name>InstallFilter</filter-name>
    <filter-class>sonia.blog.webstart.install.InstallFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>InstallFilter</filter-name>
    <url-pattern>/install/*</url-pattern>
  </filter-mapping>
  <listener>
    <description>ServletContextListener</description>
    <listener-class>sonia.blog.webstart.install.InstallContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>JnlpServlet</servlet-name>
    <servlet-class>sonia.blog.webstart.JnlpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InstallServlet</servlet-name>
    <servlet-class>sonia.blog.webstart.install.InstallServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StatisticServlet</servlet-name>
    <servlet-class>sonia.blog.webstart.statistic.StatisticServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JnlpServlet</servlet-name>
    <url-pattern>/jnlp/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InstallServlet</servlet-name>
    <url-pattern>/install/action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StatisticServlet</servlet-name>
    <url-pattern>/index.idx</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
      30
    </session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.idx</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
